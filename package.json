{
  "name": "sonar-demo-microservices",
  "version": "1.0.0",
  "description": "SonarSource Demo: React + Node.js microservices with intentional security vulnerabilities",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test -- --coverage --watchAll=false",
    "test:backend": "cd backend && npm test",
    "sonar": "sonar-scanner"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "sonar-scanner": "^3.1.0"
  },
  "keywords": [
    "sonar",
    "demo",
    "microservices",
    "react",
    "nodejs",
    "security",
    "static-analysis"
  ],
  "author": "SonarSource Solutions Engineering",
  "license": "MIT"
}
